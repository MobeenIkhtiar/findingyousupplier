<script>
    function ValidateEmail() {
        var email = document.getElementById('email').value;
        $.ajax({
            dataType: "json",
            type: "POST",
            url: '../Admin/validateEmail',
            data: { Email: email },
            //traditional: true,
            success: function (response) {
                if (response == 0) {
                    $("#msg").html("Email already exist, please try another one!");
                    $("#msg").addClass("text-danger");
                    $(':input[type="submit"]').prop('disabled', true);
                } else {
                    $("#msg").removeClass("text-danger");
                    $("#msg").addClass("text-success");
                    $("#msg").html("Congrates, Email is available.");
                    $(':input[type="submit"]').prop('disabled', false);
                    return trim(this);
                }
            },
            error: function (response) { alert('Error'); }

        });
    }

    function ValidatePromoCode() {
        var promocode = document.getElementById('promocode').value;
        $.ajax({
            dataType: "json",
            type: "POST",
            url: '../Admin/validatePromoCode',
            data: { PromoCode: promocode },
            //traditional: true,
            success: function (response) {
                if (response == "-1") {
                    $("#promo").html("Invalid Promo Code! If you continue you will be charged.");
                    $("#promo").addClass("text-danger");

                }
                else if (response == "-2") {
                    $("#promo").removeClass("text-danger");
                    $("#promo").addClass("text-info");
                    $("#promo").html("You are getting registered without any Promo Code. If you continue you will be charged.");

                    return trim(this);
                }
                else {
                    $("#promo").removeClass("text-danger");
                    $("#promo").addClass("text-success");
                    $("#promo").html("Congrates, Promo Code is valid. You are getting a trial of " + response + " months");

                    return trim(this);
                }
            },
            error: function (response) { alert('Error'); }

        });
    }

    $("#email").on({
        keydown: function (e) {
            if (e.which === 32)
                return false;
        },
        change: function () {
            this.value = this.value.replace(/\s/g, "");
        }
    });

</script>
<script type="text/javascript">
    function trim(el) {
        el.value = el.value.
            replace(/(^\s*)|(\s*$)/gi, ""). // removes leading and trailing spaces
            replace(/[ ]{2,}/gi, " ").       // replaces multiple spaces with one space
            replace(/\n +/, "\n");           // Removes spaces after newlines
        return;
    };
</script>
