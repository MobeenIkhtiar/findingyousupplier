    <div class="row">
        <h1 class="text-center"><strong>Sign Up</strong></h1>

        <form class="form" method="post" action="@Url.Action("PostRegister","Auth")">
            <input type="hidden" name="package" value="@ViewBag.package" />
            <div class="row">
                <div class="col-md-6">
                    <h4 class="page-header">User Information:</h4>
                    <div class="form-group">
                        <label class="control-label">Name :</label>
                        <input type="text" onchange="return trim(this)" name="Name" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Email :</label>
                        <input type="email" onkeydown="return trim(this)" onchange="ValidateEmail()" id="email" name="Email" class="form-control" required />
                        <label id="msg"></label>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Password :</label>
                        <input type="password" onchange="return trim(this)" name="Password" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Phone :</label>
                        <input type="text" onchange="return trim(this)" name="Phone" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Website Address :</label>
                        <input type="text" onchange="return trim(this)" pattern="^(https?://www?\.)?([a-zA-Z0-9]([a-zA-ZäöüÄÖÜ0-9\-]{0,61}[a-zA-Z0-9])?\.)+[a-zA-Z]{2,6}$" name="Website_Address" class="form-control" required />
                        <span>www.abc.com</span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Country :</label>
                        <input type="text" onchange="return trim(this)" name="Country" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Promo Code :</label>
                        <input type="text" onkeydown="return trim(this)" onchange="ValidatePromoCode()" id="promocode" name="promoCode" class="form-control" />
                        <label id="promo"></label>
                    </div>
                </div>


                @if (ViewBag.package == "Silver_UK_Supplier" || ViewBag.package == "Golden_UK_Supplier" || ViewBag.package == "Silver_International_Supplier" || ViewBag.package == "Golden_International_Supplier")
                {
                    <div class="col-md-6">
                        <h4 class="page-header">Company Information:</h4>
                        <div class="form-group">
                            <label class="control-label">Comapny Name :</label>
                            <input type="text" onchange="return trim(this)" name="Company_Name" class="form-control" required />
                        </div>
                        <div class="form-group">
                            <label class="control-label">Company Address :</label>
                            <input type="text" onchange="return trim(this)" name="Company_Address" class="form-control" required />
                        </div>
                        <div class="form-group">
                            <label class="control-label">Company Number :</label>
                            <input type="text" onchange="return trim(this)" name="Company_Number" class="form-control" required />
                        </div>
                        <div class="form-group">
                            <label class="control-label">VAT Registration Number :</label>
                            <input type="text" onchange="return trim(this)" name="VAT_Registration_Number" class="form-control" required />
                        </div>
                    </div>
                }
            </div>
            <div class="row">
                <div class="col-md-6">
                    <h4 class="page-header"><span style="color:red;">* </span>Payment:</h4>
                    <div class="form-group">
                        <div id="payment-form"></div>
                    </div>
                    <div class="form-group">
                        <p>By continuing you agree to Findingyousuppliers <a href="#" data-toggle="modal" data-target="#myModal"><strong>Terms and Conditions</strong></a>.</p>
                    </div>
                    <div class="form-group">
                        <p>Findingyousuppliers comply with <a href="#" data-toggle="modal" data-target="#myModal1"><strong>GDPR</strong></a>.</p>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Register" class=" btn btn-default" />
                    </div>
