@{
    ViewBag.Title = "Edit Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using FindingYouSupplier.Models
@using FindingYouSupplier.Helping_Classes
<style>
    .list-group {
        border-radius: 0px !important;
    }

    .list-group-item:first-child {
        border-top-left-radius: 0px;
        border-top-right-radius: 0px;
    }

    .list-group .active {
        background-color: #0612A6;
        color: white;
        border-color: #0612A6;
    }

        .list-group .active:hover {
            background-color: #000;
            color: white;
            border-color: #000;
        }
    
</style>
<br />
<br />
<div class="container">
    <br />
    <br />
    <p class="text-center" style="font-size: 22px; color: #82CA9C;"><strong>@ViewBag.message</strong></p>
    <br />
    <div class="row">
        <div class="col-md-3">
            <div class="list-group">
                <a href="@Url.Action("Index", "Account")" class="list-group-item active">
                    <h4><strong>My Account</strong></h4>
                </a>
                <a href="@Url.Action("EditProfile", "Account")" class="list-group-item">Edit Profile</a>
                @{
                    SessionDTO sdto = new SessionDTO();
                }
                @if (sdto.getRole() == 1 || sdto.getRole() == 2)
                {
                    <a href="@Url.Action("EditCompanyProfile", "Account")" class="list-group-item">Edit Comapny Profile</a>
                }
                <a href="@Url.Action("ChangePassword", "Account")" class="list-group-item">Change Password</a>
                @if (sdto.getRole() == 1 || sdto.getRole() == 2)
                {
                    <a href="@Url.Action("AddProduct", "Account")" class="list-group-item">Add Product</a>
                    <a href="@Url.Action("ViewProducts", "Account")" class="list-group-item">View Products</a>
                }
                @if (sdto.getRole() == 0)
                {
                    <a href="@Url.Action("Messages", "Account")" class="list-group-item">Enquiries</a>
                }
                @if (sdto.getRole() == 1 || sdto.getRole() == 2)
                {
                    <a href="@Url.Action("Messages", "Account")" class="list-group-item">Enquiries</a>
                }

            </div>
        </div>
        <div class="col-md-9">
            <h2>
                <strong>
                    Edit Profile
                </strong>
            </h2>
            <div class="col-md-6">
                <form action="@Url.Action("UpdateProfile", "Account")" method="post">
                    <div class="form-group">
                        <label class="control-label">Name:</label>
                        <input onchange="return trim(this)" type="text" name="Name" class="form-control" value="@ViewBag.user.Name" required />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Email:</label>
                        <input onchange="return trim(this)" type="email" name="Email" class="form-control" value="@ViewBag.user.Email" required />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Phone:</label>
                        <input onchange="return trim(this)" type="text" name="Phone" class="form-control" value="@ViewBag.user.Phone" required />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Website Address:</label>
                        <input onchange="return trim(this)" type="text" name="Website_Address" class="form-control" value="@ViewBag.user.Website_Address" required />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Country:</label>
                        <input onchange="return trim(this)" type="text" name="Country" class="form-control" value="@ViewBag.user.Country" required />
                    </div>
                    <div class="form-group">
                        <button type="submit" class="form-control btn-default">Update</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>



